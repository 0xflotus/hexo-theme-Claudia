<%- partial('_partial/head') %>
<style>
  /*util start*/
  .debug {
    border: 1px solid red;
  }

  .flex-column {
    flex-direction: column;
  }

  .flex-1 {
    flex: 1;
  }

  .flex-2 {
    flex: 2;
  }

  .center {
    align-items: center;
    justify-content: center;
  }

  .justify-center {
    justify-content: center;
  }

  .justify-space-between {
    justify-content: space-between;
  }

  .align-center {
    align-items: center;
  }

  .full-height {
    height: 100%;
  }

  .half-height {
    height: 50%;
  }

  .full-width {
    width: 100%;
  }

  .border-radius {
    border-radius: 4px;
  }

  .overflow-hidden {
    overflow: hidden;
  }

  /*邊距控制*/
  .has-margin {
    margin: 15px;
  }

  .has-padding {
    padding: 15px;
  }

  .has-padding-bottom {
    padding-bottom: 15px;
  }

  .position-relative {
    position: relative;
  }

  .position-absolute {
    position: absolute;
  }
  /*util end*/

  #navbar {
    position: fixed;
    width: 100%;
    top:0;
    z-index: 2;
    border-top: 2px solid red;
    border-bottom: 1px solid #f1f1f1;
    background-color: rgba(255, 255, 255, 0.82);
  }

  #navbar .user-info {
    visibility: hidden;
  }

  .content-blur {
    margin-top: 50px;
    position: absolute;
    top:0;
    filter: blur(10px);
    z-index: 1;
  }

  .primary-post-container{
    height: 330px;
    margin-bottom: 15px;
  }

  .primary-post-container .title {
    color: #fff;
  }

  .primary-post-container .sub-title {
    color: #fff;
  }
  .primary-post-container .date {
    color: #f1f1f1;
  }

  .primary-item-main {
    width: 100%;
    display: flex;
    align-items: center;
  }

  .primary-item-main > div {
    height: 140px;
  }

  .primary-item-sub {
    display: flex;
    align-items: center;
    height: 48.6%;
  }

  .primary-item-sub > div {
    height: 100px;
    display: flex;
    align-items: center;

    padding-left: 15px;
  }

  /*次要的 post 内容样式*/

  .sub-post-container {
    height: 234px;
    display: flex;
    margin-bottom: 15px;
  }

  .sub-post-container > div {
  }

  .sub-post-container .post-avatar {

  }

  .sub-post-container .post-content {
    padding-left: 15px;
    padding-right: 15px;
    border-bottom: 1px solid #e1e1e1;
  }

  /*用戶狀態欄*/

  .user-info {
    max-width: 270px;
    position: fixed;
  }

  .user-info .avatar-wrap {
    height: 150px;
    padding-top: 90px;
    margin-bottom: 45px;

    background-size: cover;
    background-color: blueviolet;
    background-repeat: no-repeat;
  }

  .user-info .avatar {
    width: 110px;
    height: 110px;
    border-radius: 50%;
  }

  .sns-container {
    flex-wrap: wrap;
  }

  /*通用*/
  .content-background {
    background: rgba(255, 255, 255, .96);
  }

</style>
<body>
  <div style="background: #f5f8f9;">
    <!-- 全局头部导航-->
    <%- partial('_partial/header', null, {cache: !config.relative_link}) %>
    <div id="main-container" class="container" style="position: relative; z-index: 1; padding-top: 50px;">
      <div class="is-flex main-content" style="margin-top: 20px">
        <section class="main-content"><%- body %></section>
        <% if(theme.sidebar){ %>
          <%- partial('_partial/sidebar', null, {cache: !config.relative_link}) %>
        <%}%>
      </div>
      <%- partial('_partial/footer', null, {cache: !config.relative_link}) %>
    </div>
    <!-- 翻页 pager -->

    <ul class="pager">
        <% if (page.prev){ %>
      <li class="previous">
        <a href="<%- config.root %><%- page.prev_link %>">&larr; Newer Posts</a>
      </li>
        <% } %>
        <% if (page.next){ %>
      <li class="next">
        <a href="<%- config.root %><%- page.next_link %>">Older Posts &rarr;</a>
      </li>
        <% } %>
    </ul>
    <%- partial('_partial/mobile-nav', null, {cache: !config.relative_link}) %>
    <%- partial('_partial/after-footer') %>
  </div>
</body>
</html>